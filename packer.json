{
  "variables": {
    "project_id": "",
    "k8s_version": "",
    "minikube_version": ""
  },
  "builders": [
    {
      "type": "googlecompute",
      "project_id": "{{user `project_id`}}",
      "source_image_family": "ubuntu-1710",
      "zone": "europe-west1-b",
      "ssh_username" : "root",
      "image_name": "kubernetes-{{ user `k8s_version` | clean_image_name }}",
      "image_labels": {
        "track": "kubernetes",
        "created": "{{ timestamp }}"
      }
    }
  ],
  "provisioners": [
    {
      "destination": "/tmp/bootstrap",
      "source": "files",
      "type": "file"
    },
    {
      "type": "shell",
      "script": "bootstrap.sh",
      "environment_vars": [
              "K8S_VERSION={{ user `k8s_version` }}",
              "MINIKUBE_VERSION={{ user `minikube_version` }}"
      ]
    }
  ]

}
